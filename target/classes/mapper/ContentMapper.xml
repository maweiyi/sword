<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.maweiyi.sword.model.dao.ContentMapper">
    <insert id="insertContent" parameterType="me.maweiyi.sword.model.entity.Content">
        INSERT INTO content(title, user_id, content, status) VALUES
        (#{title}, #{user_id}, #{content}, #{status})
    </insert>
    <select id="findContentAll" resultType="Integer">
        SELECT COUNT(*) FROM content;
    </select>
</mapper>